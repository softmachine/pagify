<!DOCTYPE html>
<html>
<head>
  <title>Demo</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
    <ul id="topnav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_page_path %></li>
        <li><%= link_to "Pages", pagify_pages_path %></li>
        <li><%= link_to "Categories", pagify_categories_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Logout(#{current_user.email})", destroy_user_session_path, :method => :delete%></li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>

    </ul>
</div>

<div id="content">
  <%= yield %>
</div>

<div id="footer">

</div>

</body>
</html>
