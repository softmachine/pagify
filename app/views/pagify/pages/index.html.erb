<div class="pagify">
  <h2>List of pages</h2>

  <div id="main">
  <table>
    <thead>
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
    </thead>

    <tbody>
       <% @pages.each do |page| %>
          <tr>
            <td><%= page.name %></td>
            <td><%= page.title%></td>
            <td><%= link_to 'show', page_path(page) %></td>
            <td><%= link_to 'edit', edit_page_path((page)) %></td>
            <td><%= link_to 'modify', modify_page_path((page)) %></td>
            <td><%= link_to 'delete', page_path(page), :confirm => 'Srsly, Mate?', :method => :delete%></td>
          </tr>
       <% end %>
    </tbody>
  </table>
  </div>

  <div id="context">
    <ul>
      <li><%= link_to "new Page", new_page_path%></li>
    </ul>
  </div>
</div>


