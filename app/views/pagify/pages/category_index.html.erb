<h2>pages for Category <%= @category.name %></h2>

<table>
  <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Categories</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>

  <tbody>
     <% @pages.each do |page| %>
        <tr>
          <td><%= page.name %></td>
          <td><%= page.title%></td>
          <td><%= link_to 'Show', pagify_page_path(page.name) %></td>
          <td><%= link_to 'Edit', edit_pagify_page_path((page.name)) %></td>
          <td><%= link_to 'Categories', pagify_page_pagify_categories_path((page.name)) %></td>
          <td><%= link_to 'Delete', pagify_page_path(page.name), :confirm => 'Srsly, Mate?', :method => :delete%></td>
        </tr>
     <% end %>
  </tbody>
</table>

<div>
  <ul>
    <li><%= link_to "New Page", new_pagify_page_path%></li>
  </ul>
</div>


