<div class="pagify">
    <h1>create new category</h1>

    <div id="main">
        <%= render 'form_errors' %>
        <%= form_for(@category, :url => categories_path, :as => :category) do |f| %>
          <h3>Category Details</h3>

          <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, :size => 10 %>
          </div>
          <div class="field">
              <%= f.label :title%>
              <%= f.text_field :title, :size => 10 %>
          </div>
          <div class="field">
              <%= f.label :description%>
              <%= f.text_field :description, :size => 30 %>
          </div>
          <hr>
          <div class="actions">
              <%= f.submit %>
          </div>
        <% end %>
    </div>

    <div id="context">
        <ul>
            <li><%= link_to 'back', :back %></li>
        </ul>
    </div>
</div>